<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="booklib.books.AddBookController"
      spacing="12"
      prefWidth="520"
      style="-fx-padding: 16; -fx-background-color: white;">

    <Label text="Add Book"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Select a book from the catalog (imported from books.csv)." />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Book:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="bookCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Author:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="authorValue" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Pages:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="pagesValue" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Genre:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="genreValue" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Language:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="languageValue" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Add" defaultButton="true" onAction="#onSave"/>
    </HBox>
</VBox>
