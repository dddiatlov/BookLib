<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="booklib.Controller"
            prefWidth="900"
            prefHeight="600">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="10"
              alignment="CENTER_LEFT"
              style="-fx-padding: 12; -fx-background-color: #2c3e50;">
            <Label text="BookLib"
                   style="-fx-text-fill: white;
                      -fx-font-size: 18px;
                      -fx-font-weight: bold;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="Logout"
                    onAction="#onLogout"
                    style="-fx-background-color: #c0392b;
                       -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <HBox spacing="12"
              style="-fx-padding: 12; -fx-background-color: #f3f3f3;">

            <!-- LEFT: BOOKS -->
            <VBox spacing="10" prefWidth="520">

                <!-- HEADER ROW -->
                <HBox spacing="12" alignment="CENTER_LEFT">

                    <!-- My Books controls -->
                    <Label fx:id="myBooksLabel"
                           text="My Books"
                           style="-fx-font-size: 16px;
                                  -fx-font-weight: bold;"/>

                    <Button fx:id="addBookButton"
                            text="+ Add Book"
                            onAction="#onAddBook"/>

                    <Button text="Logout" onAction="#onLogout"/>


                    <Button text="Import CSV"
                            onAction="#onImportCsv"/>

                </HBox>

                <!-- MY BOOKS LIST -->
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="booksContainer"
                              spacing="15"
                              style="-fx-background-color: #f9f9f9;
                                     -fx-padding: 10;">
                            <!-- book cards added programmatically -->
                        </VBox>
                    </content>
                </ScrollPane>

            </VBox>

            <!-- RIGHT: READING SESSIONS -->
            <VBox spacing="10" prefWidth="340">
                <Label text="Reading Sessions"
                       style="-fx-font-size: 16px;
                              -fx-font-weight: bold;"/>
                <ListView fx:id="readingSessionsListView"
                          VBox.vgrow="ALWAYS"/>
            </VBox>

        </HBox>
    </center>

</BorderPane>
